# ========================================
# KIROGOVCOMPARE 环境配置示例
# ========================================

# 数据库配置 (PostgreSQL)
DATABASE_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gov_report_diff
DB_USER=postgres
DB_PASSWORD=postgres

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=gov-report-diff

# 服务器配置
PORT=8787
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# 安全配置 (生产环境必须设置!)
JWT_SECRET=
ADMIN_BOOTSTRAP_TOKEN=

# ========================================
# AI 模型配置
# ========================================
# 支持的 Provider: gemini, modelscope, stub

# 主模型配置
LLM_PROVIDER=modelscope
LLM_MODEL=qwen3-235b

# Gemini 配置
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
# 可选: gemini-2.5-flash, gemini-2.5-flash-lite, gemini-2.5-pro, gemini-3.0-flash

# ModelScope 配置 (阿里云百炼)
MODELSCOPE_API_KEY=
MODELSCOPE_MODEL=qwen3-235b
# 可选: qwen3-235b, qwen-plus, deepseek-v3, mimo-v2

# 日志配置
LOG_LEVEL=info

# CORS 配置 (生产环境设置为实际域名)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300
RATE_LIMIT_STORE=redis
RATE_LIMIT_REDIS_URL=
RATE_LIMIT_REDIS_PREFIX=rate_limit:

# PDF export service token
PDF_EXPORT_SERVICE_USER_ID=1
PDF_EXPORT_SERVICE_USERNAME=pdf-export-worker
