{
  "name": "gov-report-diff",
  "version": "1.0.0",
  "description": "政府信息公开年度报告差异比对系统",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:llm": "cross-env DATABASE_TYPE=sqlite PORT=8787 ts-node src/index-llm.ts",
    "health:llm": "node scripts/llm-health.js",
    "ports:llm": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/llm-ports.ps1 -Port 8787",
    "smoke:llm": "node scripts/llm-smoke-insert.js",
    "start:llm": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/llm-start.ps1 -Port 8787",
    "stop:llm": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/llm-stop.ps1 -Port 8787",
    "build": "tsc && node -e \"const fs=require('fs'); const path=require('path'); const src=path.join('src','public'); const dest=path.join('dist','public'); const copyAsync=()=>fs.cp(src,dest,{recursive:true},err=>{if(err){console.error('fs.cp failed',err); process.exit(1);}}); fs.mkdirSync('dist',{recursive:true}); const canUseCpSync=typeof fs.cpSync==='function' && process.platform!=='win32'; if(canUseCpSync){ try{ fs.cpSync(src,dest,{recursive:true}); } catch(err){ console.warn('fs.cpSync failed, falling back to fs.cp', err); if(typeof fs.cp==='function'){ copyAsync(); } else { throw err; } } } else if(typeof fs.cp==='function'){ console.warn('fs.cpSync unavailable on this platform; using fs.cp'); copyAsync(); } else { console.error('Neither fs.cpSync nor fs.cp is available. Please use Node 16+'); process.exit(1); }\"",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:pbt": "jest --testPathPattern=pbt",
    "test:phase2": "jest --testPathPattern=phase2",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "keywords": [
    "government",
    "report",
    "diff",
    "comparison"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1500.0",
    "axios": "^1.6.2",
    "bull": "^4.11.5",
    "diff-match-patch": "^1.0.5",
    "docx": "^8.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pdfjs-dist": "^3.11.174",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.11.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "fast-check": "^3.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
