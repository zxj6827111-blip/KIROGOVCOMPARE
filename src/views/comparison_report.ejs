                        </div>
                        <div class="text-blue-800">
                            <%= newer.meta.year %>Âπ¥ ÁâàÊú¨
                        </div>
                    </div>

                    <% sections.forEach(function(section) { %>
                        <div class="bg-white rounded border border-gray-200 p-2 mb-6 break-inside-avoid">
                            <!-- Section Title -->
                            <div class="px-4 py-2 bg-gray-50 border-b border-gray-200 mb-4">
                                <h3 class="text-lg font-bold text-gray-800">
                                    <%= section.title %>
                                </h3>
                            </div>

                            <div class="grid grid-cols-2 gap-4 px-2">
                                <!-- Left Column (Old) -->
                                <div class="border-r border-dashed border-gray-300 pr-4">
                                    <% if (section.oldSec) { %>
                                        <% if (section.oldSec.type==='text' ) { %>
                                            <div
                                                class="text-sm font-serif-sc whitespace-pre-line text-gray-600 leading-relaxed text-justify">
                                                <%= section.oldSec.content %>
                                            </div>
                                            <% } else if (section.oldSec.type==='table_2' &&
                                                section.oldSec.activeDisclosureData) { %>
                                                <%- include('partials/table_2', { data:
                                                    section.oldSec.activeDisclosureData }) %>
                                                    <% } else if (section.oldSec.type==='table_3' &&
                                                        section.oldSec.tableData) { %>
                                                        <%- include('partials/table_3', { data:
                                                            section.oldSec.tableData, compact: true }) %>
                                                            <% } else if (section.oldSec.type==='table_4' &&
                                                                section.oldSec.reviewLitigationData) { %>
