                                            <div
                                                class="text-sm font-serif-sc whitespace-pre-line text-gray-800 leading-relaxed text-justify">
                                                <%- section.diffHtml %>
                                            </div>
                                            <% } else if (section.newSec.type==='table_2' &&
                                                section.newSec.activeDisclosureData) { %>
                                                <%- include('partials/table_2', { data:
                                                    section.newSec.activeDisclosureData }) %>
                                                    <% } else if (section.newSec.type==='table_3' &&
                                                        section.newSec.tableData) { %>
                                                        <%- include('partials/table_3', { data:
                                                            section.newSec.tableData, compact: true }) %>
                                                            <% } else if (section.newSec.type==='table_4' &&
                                                                section.newSec.reviewLitigationData) { %>
                                                                <%- include('partials/table_4', { data:
                                                                    section.newSec.reviewLitigationData }) %>
