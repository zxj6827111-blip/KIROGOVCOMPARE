                                                    <td class="p-1 px-2 text-gray-700 border-r border-yellow-100">
                                                        <%= row.label %>
                                                    </td>
                                                    <td
                                                        class="p-1 px-2 text-right text-gray-500 font-mono border-r border-yellow-100">
                                                        <%= row.valA %>
                                                    </td>
                                                    <td
                                                        class="p-1 px-2 text-right font-bold font-mono border-r border-yellow-100">
                                                        <%= row.valB %>
                                                    </td>
                                                    <td
